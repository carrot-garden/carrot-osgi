<project default="git" basedir="./..">

	<echo message="basedir : ${basedir}" />

	<property name="tag" value="carrot-maven-1.1.0" />

	<target name="git">
		<exec executable="git">
			<arg value="tag" />
			<arg value="-d" />
			<arg value="${tag}" />
		</exec>
		<exec executable="git">
			<arg value="push" />
			<arg value="origin" />
			<arg value=":refs/tags/${tag}" />
		</exec>
	</target>

</project>
